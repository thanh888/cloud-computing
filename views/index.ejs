<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Product List</title>
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="/css/style.css">
  <script defer src="/scripts.js"></script>

  <link rel="stylesheet" href="/styles.css">
</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
          
        <div class="col-md-4 mb-5">
          <h1 class="mb-4">Product List</h1>
        <a href="/add" class="btn btn-success">Add Product</a>
        </div>
				<div class="col-md-5 text-center mb-5" style="margin-top: 80px;margin-right: 100px;">
          
					<form action="/search" method="post" class="search-form mb-4">
            <div class="input-group">
              <input type="text" name="searchQuery" class="form-control search-input" placeholder="Search by name, description, price, or quantity">
              <div class="input-group-append">
                <button type="submit" class="btn btn-success">Search</button>
              </div>
            </div>
          </form>
          
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table table-striped">
						  <thead>
						    <tr>
						      <th>Name</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Actions</th>
						    </tr>
						  </thead>
						  <tbody>
						    <% products.forEach(product => { %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= product.price %></td>
                    <td><%= product.quantity %></td>
                    <td>
                      <a href="/edit/<%= product._id %>" class="btn btn-success">Edit</a>
                      <a href="#" class="btn btn-danger delete-button" data-product-id="<%= product._id %>">Delete</a>                    </td>
                  </tr>
                <% }); %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>

<!-- views/index.ejs -->

          <!-- ... (Các phần khác) -->

          <!-- Dialog Container -->
          <div id="deleteDialog" class="dialog-container">
            <div class="dialog-box">
              <div class="dialog-header">Confirm Deletion</div>
              <p>Are you sure you want to delete this product?</p>
              <div class="dialog-buttons">
                <button id="cancelDelete" class="btn btn-secondary">Cancel</button>
                <a id="confirmDelete" class="btn btn-danger">Delete</a>
              </div>
            </div>
          </div>

          <!-- ... (Các phần khác) -->
	</body>
</html>
